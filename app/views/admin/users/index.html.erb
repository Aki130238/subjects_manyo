<div class="container">
<h1>管理画面のユーザー一覧</h1>
  <h1>user一覧</h1>
  <p><%= notice %></p>
  <div class="row">
    <table class="table">
      <tr>
        <th>名前</th>
        <th>Email</th>
        <th>タスク数</th>
        <th>admin権限</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </div>
  <div class="row">
    <% @users.each do |user| %>
      <tr>
        <td scope="col"><%= user.name %></td>
        <td scope="col"><%= user.email %></td>
        <td scope="col"><%= user.tasks.count %></td>
        <td scope="col"><%= user.admin %></td>
        <td scope="col"><%= link_to '詳細を見る', admin_user_path(user.id) %></td>
        <td scope="col"><%= link_to '編集する', edit_admin_user_path(user.id) %></td>
        <td scope="col"><%= link_to 'ユーザー削除', admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
    </table>
    <%= link_to"ユーザーを登録する", new_admin_user_path %>
  </div>
</div>