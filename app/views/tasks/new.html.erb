<p><%= notice %></p>
<%= form_with(model: @task, local: true) do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :content %>
    <%= form.text_field :content %>
    <%= form.submit %>
    <%= link_to (button_tag "戻る", type: 'button'), { controller: :tasks, action: :index } %>
<% end %>