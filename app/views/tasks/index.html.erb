<div class="container">
  <div class="row">
    <p><%= notice %></p>
    <%= form_with(model: Task.new, method: :get, url: tasks_path, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title_search, "タイトル検索", class: 'col-sm-1 col-form-label' %>
        <div class="col-sm-3">
            <%= f.text_field :title, class: 'form-control', id: 'title-search' %>
        </div>
        <%= f.label :status_search, "状態検索", class: 'col-sm-1 col-form-label' %>
        <div class="col-sm-1">
            <%= f.select :status, {未着手: "未着手", 着手中: "着手中", 完了: "完了"}, class: 'form-control', include_blank: true, selected: '' %>
        </div>
        <%= f.hidden_field :search, value: 'true' %>

        <div class="col-sm-2">
            <%= f.submit "絞り込み検索" %>
        </div>
        <div class="col-sm-2"><%= link_to (button_tag "優先順位でソートする", type: 'button'), tasks_path(sort_priority: "true") %></div>
        <div class="col-sm-2"><%= link_to (button_tag "終了期限でソートする", type: 'button'), tasks_path(sort_expired: "true") %></div>

      </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table">
      <thead class="thead-dark" >
        <tr>
            <th scope="col">タイトル</th>
            <th scope="col">優先順位</th>
            <th scope="col">終了期限</th>
            <th scope="col">ステータス</th>
            <th scope="col">内容</th>
            <th scope="col">担当者</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
      </thead>
      <tbody class="thead-light" >
        <div class="row">
          <% @tasks.each do |t| %>
            <tr>
                <td scope="col"><%= t.title %></td>
                <td scope="col"><%= t.priority %></td>
                <td scope="col"><%= t.expiration_out.strftime("%Y年%-m月%-d日") %></td>
                <td scope="col"><%= t.status %></td>
                <td scope="col"><%= t.content %></td>
                <td scope="col"><%= link_to '詳細を見る', task_path(t.id) %></td>
                <td scope="col"><%= link_to "編集する", edit_task_path(t.id) %></td>
                <td scope="col"><%= link_to '削除する', task_path(t.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
    <%= paginate @tasks %>
  </div>
</div>
